<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/iranyekan</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
        <item name="android:textViewStyle">@style/textViewStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="toolbarStyle">@style/toolbarStyle</item>
    </style>


    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/iranyekan</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="toolbarStyle" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="elevation">6dp</item>
        <item name="android:elevation">6dp</item>
        <item name="background">@color/white</item>
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="BaseTheme" parent="AppTheme" />

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">3dp</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>


    <style name="AppMaterialDialogTheme" parent="AppTheme">
        <item name="materialAlertDialogTheme">@style/AlertDialogMaterialTheme</item>
    </style>

    <style name="AlertDialogMaterialTheme" parent="Theme.MaterialComponents.Dialog" />


    <style name="Login" parent="BaseTheme">
        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysVisible</item>
    </style>

    <style name="WebView" parent="BaseTheme" />

    <style name="textViewStyle" parent="android:Widget.TextView">
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <declare-styleable name="NumberedTextList">
        <attr name="android:text" format="string" />
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="indicatorType" format="enum">
            <enum name="number" value="0" />
            <enum name="bullet" value="1" />
        </attr>
        <attr name="indiColor" format="reference" />
        <attr name="indicatorSeparator" format="string" />
        <attr name="textMargin" format="dimension" />
        <attr name="itemMargin" format="dimension" />
    </declare-styleable>

    <style name="HintInputTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#757575</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/iranyekan</item>
        <item name="colorAccent">#757575</item>
        <item name="colorControlNormal">#dedede</item>
        <item name="colorControlActivated">#dedede</item>
        <item name="colorControlHighlight">#dedede</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/iranyekan</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="errorTextColor">@color/red</item>
    </style>

    <style name="HelperTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:textColorHint">@color/teal_200</item>
        <item name="android:textSize">@dimen/font_size_12</item>
        <item name="android:fontFamily">@font/iranyekan</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="colorControlNormal">#dedede</item>
        <item name="colorControlActivated">#dedede</item>
        <item name="colorControlHighlight">#dedede</item>
    </style>

    <style name="Tab">
        <item name="android:fontFamily">@font/iranyekan</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="Theme.MySwitchTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="queryBackground">@color/transparent</item>
        <item name="fontFamily">@font/iranyekan</item>
        <item name="android:textColorHint">@color/text_gray</item>
    </style>

</resources>